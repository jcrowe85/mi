{% comment %}
  Longform Product Section
{% endcomment %}

<section class="longform-product">
  <div class="page-width">

    {% if section.settings.heading != blank %}
      <h1 class="longform-product__heading">
        {{ section.settings.heading }}
      </h1>
    {% endif %}

    {% if section.settings.content != blank %}
      <div class="longform-product__content rte">
        {{ section.settings.content }}
      </div>
    {% endif %}

  </div>
</section>

{% schema %}
{
  "name": "Longform Product",
  "tag": "section",
  "class": "section-longform-product",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Longform Product Content"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Add your longform content here.</p>"
    }
  ],
  "presets": [
    {
      "name": "Longform Product"
    }
  ]
}
{% endschema %}
