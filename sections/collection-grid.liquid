        { "value": "xs", "label": "t:sections.all.section-margin.options__2.label" },
        { "value": "s", "label": "t:sections.all.section-margin.options__3.label" },
        { "value": "m", "label": "t:sections.all.section-margin.options__4.label" },
        { "value": "l", "label": "t:sections.all.section-margin.options__5.label" }
      ],
      "default": "xs",
      "label": "t:sections.all.section-margin.margin_top.label"
    },
    {
      "type": "select",
      "id": "margin_bottom",
      "options": [
        { "value": "no-indent", "label": "t:sections.all.section-margin.options__1.label" },
        { "value": "xs", "label": "t:sections.all.section-margin.options__2.label" },
        { "value": "s", "label": "t:sections.all.section-margin.options__3.label" },
        { "value": "m", "label": "t:sections.all.section-margin.options__4.label" },
        { "value": "l", "label": "t:sections.all.section-margin.options__5.label" }
      ],
      "default": "xs",
      "label": "t:sections.all.section-margin.margin_bottom.label"
    }
  ],
  "blocks": [
    {
      "type": "categories",
      "name": "t:sections.collection-grid.blocks.categories.name",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "t:sections.all.collection.label"
        },
        {
          "type": "image_picker",
          "id": "collection_image",
          "label": "t:sections.all.image.label",
          "info": "t:sections.collection-grid.info"
        },

        {
          "type": "header",
          "content": "CTA Button Colors (Per Card)"
        },
        {
          "type": "color",
          "id": "cta_bg",
          "label": "CTA background color",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "cta_text",
          "label": "CTA text color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "cta_bg_hover",
          "label": "CTA hover background (optional)",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "cta_text_hover",
          "label": "CTA hover text (optional)",
          "default": "#000000"
        },

        {
          "type": "header",
          "content": "t:sections.cards-grid.blocks.column.settings.header_1.content"
        },
        {
          "type": "range",
          "id": "column_start",
