{{ 'section-slideshow.css' | asset_url | stylesheet_tag }}
{{ 'component-additional-text.css' | asset_url | stylesheet_tag }}
<script src="{{ 'slideshow.js' | asset_url }}" defer="defer"></script>
{% style %}
	{% render 'section-margin' %}
{% endstyle %}

{% liquid
	assign text_animation = section.settings.text_animation
	assign vertical_alignment = section.settings.vertical_alignment

	assign slide_effects = section.settings.slide_effects
	assign parallax = section.settings.parallax
	assign slideshow_speed = section.settings.slideshow_speed
	assign autoplay = section.settings.is_autoplay
	assign stop_autoplay = section.settings.is_hover_stop_autoplay
	assign slideshow_delay = section.settings.slideshow_delay
	assign image_size = section.settings.image_size
	assign alignment = section.settings.section_alignment

	case image_size
		when 'adapt'
			assign section_size = 0
			assign slide_class = image_size
		when '1/1'
			assign section_size = '100%'
			assign slide_class = image_size
		when '3/2'
		assign section_size = '60%'
			assign slide_class = image_size
		when '4/3'
		assign section_size = '75%'
			assign slide_class = image_size
		when '16/9'
		assign section_size = '56%'
			assign slide_class = image_size
		when '21/9'
		assign section_size = '42.8%'
			assign slide_class = image_size
		when 'large'
			assign section_size = 'calc(100vh - var(--header-height) - var(--announcement-height))'
			assign slide_class = image_size
		else
			assign section_size = 'calc(100vh - var(--header-height) - var(--announcement-height))'
			assign slide_class = image_size
	endcase

	case alignment
		when 'left'
			assign section_style = 'margin : auto auto auto 0; text-align : left;'
		when 'center'
			assign section_style = 'margin : auto; text-align : center;'
		else
			assign section_style = 'auto 0'
	endcase

%}
<div
	class="slideshow {{ slide_class }} color-{{ section.settings.color_scheme_main_wrapper }}"
	data-id="shopify-section-{{ section.id }}"
	data-autoplay="{{ autoplay }}"
	data-stop-autoplay="{{ stop_autoplay }}"
	data-speed="{{ slideshow_speed }}"
	data-delay="{{ slideshow_delay }}"
	data-parallax="{{ parallax }}"
	data-effect="{{ slide_effects }}"
	style="--bullet-duration : {{ slideshow_delay }}s"
>
	{% if section.settings.section_layout == "container" %}
		<div class="container">
	{% endif %}
	<div class="slideshow__swiper swiper">
		<div class="slideshow__wrapper swiper-wrapper">
			{% for block in section.blocks %}
				{% liquid
					assign image_height = block.settings.image.width | divided_by: block.settings.image.aspect_ratio
					assign adapt_height = 1 | divided_by: block.settings.image.aspect_ratio | times: 100 | append: '%'
					assign slide_color = block.settings.color_scheme
					if image_size == 'adapt'
						assign section_size = adapt_height
					endif
				%}
					
				{% style %}
				.slideshow-swiper__slide.swiper-slide.{{ block.id }} .have-overlay:before { content: ""; position: absolute; width: 100%; height: 100%; top: 0; left: 0; z-index: -1; pointer-events: none; transition: all .4s ease; background: #000; opacity: 0.{{ block.settings.overlay_opacity }}; }
					[data-id="{{ block.id }}"].slideshow-slide {
						--slide-height : {{ section_size }};
					}

					[data-id="{{ block.id }}"] .have-overlay {
						--overlay-alpha : {{ block.settings.overlay_opacity }}%;
					}
				{% endstyle %}
					<div class="slideshow-swiper__slide swiper-slide {{ block.id }}">
						<div class="slideshow-slide {% if template == 'page.company' or template == 'page.science' or template == 'blog' %}no-border-radius{% endif %} background color-{{ slide_color }}" data-id="{{ block.id }}" data-color-scheme="color-{{ slide_color }}" style="align-items: {{ vertical_alignment }}">
							<div class="container">
							<div class="slideshow-slide__img have-overlay">
								{% if block.settings.image != blank %}
									{{
										block.settings.image
										| image_url: width: 3840
										| image_tag:
											loading: 'lazy',
											width: block.settings.image.width,
											height: image_height,
											sizes: '100vw',
											widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
									}}
								{% elsif block.settings.video != blank %}
									{{
										block.settings.video
										| video_tag:
											image_size: '1100x',
											autoplay: true,
											loop: true,
											controls: false,
											muted: true
									}}
								{% endif %}
							</div>
							
					{% if block.settings.video != blank %}
						<div class="flaoting-play-video-play-pause-button-wrapper">
						<button class="flaoting-play-video-play-pause-button {{ block.id }}">
							<svg  class="play-icon" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg" class="pause-play-white"><title id="play-icon">Play icon</title><path d="M12.4231 8L5.5 12.5L5.5 3.5L12.4231 8Z" fill="currentColor"></path></svg>
						<svg class="pause-icon" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg" class="pause-play-white"><title id="pause-icon">Pause icon</title><path d="M6 3V13" stroke="currentColor" stroke-width="1.5"></path><path d="M10 3V13" stroke="currentColor" stroke-width="1.5"></path></svg>
						</button>
						</div>
						<script>
							document.addEventListener('DOMContentLoaded', function() {
							// Select all floating play/pause buttons
							const playPauseButtons = document.querySelectorAll('.flaoting-play-video-play-pause-button');
							playPauseButtons.forEach(button => {
								button.addEventListener('click', function() {
								// Get the block ID from the button's classes (assuming the second class is the block.id)
								const classes = this.className.split(' ');
								const blockId = classes.find(cls => cls !== 'flaoting-play-video-play-pause-button' && !cls.startsWith('is-'));
								// Find the corresponding slide and video
								const slide = document.querySelector(`.slideshow-swiper__slide.${blockId}`);
								if (slide) {
									const video = slide.querySelector('video');
									if (video) {
									// Toggle play/pause
									if (video.paused) {
										video.play();
										// Toggle to paused state
										this.classList.remove('is-playing');
										this.classList.add('is-paused');
									} else {
										video.pause();
										// Toggle to playing state
										this.classList.remove('is-paused');
										this.classList.add('is-playing');
									}
									}
								}
								});
							});
							});
						</script>
					{% endif %}
					<div class="slideshow-slide__text" style="{{ section_style }}">
{% if block.settings.caption != blank %}
	{%- liquid
	assign bg_color = block.settings.bg_color | default: "#dc2626"
	assign text_color = block.settings.text_color | default: "#ffffff"
	assign font_size = block.settings.caption_font_size | default: 12
	-%}

	<style>
	.slideshow span.caption.caption-{{ block.id }} {
		background-color: {{ bg_color }};
		color: {{ text_color }};
		font-size: {{ font_size }}px !important;
	}
	</style>
	<span class="caption caption-{{ block.id }} {% if text_animation and parallax == false %} slide-up-animated{% endif %}"
	{% if text_animation == false %}data-swiper-parallax="-600"{% endif %}>
		{% if text_animation %}<div class="slide-up-item">{% endif %}
			{{ block.settings.caption }}
		{% if text_animation %}</div>{% endif %}
	</span>
{% endif %}
								{% if block.settings.heading != blank %}
									<h1
										class="slideshow-slide__title h1 {% if text_animation and parallax == false %} slide-up-animated{% endif %}"
										{% if text_animation == false %}data-swiper-parallax="-600"{% endif %}
									>
										{% if text_animation %}<div class="slide-up-item">{% endif %}
											{{ block.settings.heading }}
										{% if text_animation %}</div>{% endif %}
									</h1>
								{% endif %}
								{% if block.settings.text != blank %}
									<div
										class="slideshow-slide__desc richtext__content large-font{% if text_animation and parallax == false %} slide-up-animated{% endif %}"
										{% if text_animation == false %}data-swiper-parallax="-800"{% endif %}
										style="{{ section_style }}"
									>
										{% if text_animation %}<div class="slide-up-item">{% endif %}
										{{ block.settings.text }}
										{% if text_animation %}</div>{% endif %}
									</div>
								{% endif %}
								<div class="slideshow-slide__button">
									{% render 'button', layout: block %}
								</div>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
		{% if section.settings.show_bullets or section.settings.enable_additional_text %}
			<!-- <div class="slideshow-bottom slider-pagiantion-bullet {% for block in section.blocks %}color-{{ block.settings.color_scheme }}{% break %}{% endfor %}">
				<div class="container">
					<div class="slideshow-bottom__wrapper">
						{% if section.settings.show_bullets %}
								<div class="swiper-pagination__wrapper">
									<div class="swiper-pagination swiper-pagination__button"></div>
								</div>
						{% endif %}
						{% if section.settings.enable_additional_text %}
									<div class="additional-text">
										<div class="additional-text__desc small-font richtext__content">{{ section.settings.additional_text }}</div>
										<div class="additional-text__icon">{% render 'icon-additional-text' %}{% render 'icon-additional-text' %}</div>
									</div>
						{% endif %}
					</div>
				</div>
			</div> -->
		{% endif %}
	</div>
	{% if section.settings.section_layout == "container" %}
	</div>
	{% endif %}
</div>

